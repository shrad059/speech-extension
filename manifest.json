{
  "manifest_version": 2,
  "name": "Real-Time Audio Translation",
  "version": "1.0",
  "description": "Capture and translate audio in real-time.",
  "permissions": [
      "activeTab",
      "tabCapture",
      "storage",
      "https://*/",
      "http://*/"
  ],
"browser_action": {
    "default_popup": "popup.html"
},
"content_scripts": [
    {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
    }
],
"web_accessible_resources": [
    "complete.html",
    "complete.js",
    "socket.io.js"
],
"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}